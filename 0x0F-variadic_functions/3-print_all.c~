#include "variadic_functions.h"
#include <stdarg.h>
#include <stdio.h>



void print_all(const char * const format, ...)
{

	myprint_f my_array;

	my_array [] = {
		{'c', print_char},
		{'i', print_int},
		{'f', print_float},
		{'s', print_array},
	};

	va_list lista;
	va_start (lista, format);
	int i = 0, j;

	while (format[i] != '\0')
	{
		j = 0;
		while (j < 4)
		{
			if(my_array[j].my_character == format[i])
			{
				my_array[j].myprint(lista);
				j = 4;
			}
			j++;
		}
		i++;
	}
}

void print_char(va_list lista)
{
	printf("%s", (va_arg(lista, int)));
}

void print_int(va_list lista)
{
	printf("%d", (va_arg(lista, int)) );
}

void print_float(va_list lista)
{
	printf("%f", (va_arg(lista, float)));
}

void print_array(va_list lista)
{
	printf("%s", (va_arg(lista, char *)));
}
