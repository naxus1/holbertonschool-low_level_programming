#include "holberton.h"
#include <stdio.h>
/**
 * rev_string - Entry point
 * @s: Pointer to comparate
 * Return: Albways 0 (Success)
 */

void rev_string(char *s)
{

	int i, crash, contador;
	char rev[10];
	crash = 1;
	contador = 0;

	while (crash)
	{
		if (*(s + contador) != '\0')
		{
			contador++;
		}
		else
			crash = 0;
	}


	for (i = contador; i >= 0; i--)
	{
		rev[i] = *(s + i);
		_putchar(rev[i]);
	}
}
