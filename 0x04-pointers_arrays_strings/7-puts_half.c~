#include "holberton.h"

void puts_half(char *str)
{
	int i, crash, contador;

	crash = 1;
	contador = 0;

	while (crash)
	{
		if (*(s + contador) != '\0')
		{
			contador++;
		}
		else
			crash = 0;
	}

	if (contador % 2 == 0)
	{
		for (i = contador / 2; i < contador; i++)
		{
			_putchar(*(str + i));
		}
	}
